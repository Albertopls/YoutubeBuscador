<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/backgroundActivity"
    tools:context="com.example.eduardopalacios.youtubebuscador.MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icono2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="4"
        android:id="@+id/buscar"
        android:hint="Buscar"
        android:paddingLeft="30dp"
        android:background="@drawable/disenioedittext"
        />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/boton"
            android:onClick="onClickButton"
            android:backgroundTint="#dedcdc"
            android:background="@drawable/disenioboton"
            android:foreground="@drawable/ic_action_search"
            android:foregroundGravity="center"
            android:textColor="#b1aeae" />

    </LinearLayout>

</LinearLayout>
